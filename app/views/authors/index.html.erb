<div class="container mt-5">
    <div class="row">
        <h3>Author</h3>
        <div class="m-1">       
        <%= link_to "New Author" , new_author_path ,  class: "btn btn-primary" %>
        </div>
        
        <table class="table table-bordered table-hover text-nowrap     table-responsive m-2">
        <thead>
            <tr>
                <th> Sr. No </th>
                <th> Name </th>
                <th> Action </th>
            </tr>
        </thead>
        <tbody>
            <% @authors.each do |author|  %>
            <tr>
                <td scope="row"><%=author.id %></td>
                <td><%=author.name %></td>
                <td>
                    <%= link_to "Show" , author_path(author.id), class: 'btn btn-primary ' %>
                    <%= link_to "Edit", edit_author_path(author.id), class: 'btn btn-primary' %>
                    <%= link_to "Delete", author_path(author.id) , method: :delete, data: { confirm: 'Are you Sure?'} ,class: 'btn btn-primary' %>
                </td>
            </tr>
            <% end %>   
        </tbody>
        </table>
    </div>

</div>