<div class = "container mt-5">
    <h3> <%= @publisher.new_record? ? "Create Publisher" : "Edit Publisher" %> </h3>


    <%= form_for @publisher do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name , class: 'form-control' , id: 'publisher_name', placeholder: 'Enter Publisher Name' %>  
        </div>
                 
        <div class="p-2">
        <%= f.submit( @publisher.new_record? ? "Create" : "Edit",  class: "btn btn-primary") %> 
        </div>
        <% end %>

</div>