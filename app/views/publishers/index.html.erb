<div class="container mt-5">
    <div class="row">
        <h3>Publishers</h3>
        <div class="m-1">       
        <%= link_to "New Publisher" , new_publisher_path ,  class: "btn btn-primary" %>
        </div>
        
        <table class="table table-bordered table-hover text-nowrap     table-responsive m-2">
        <thead>
            <tr>
                <th> Sr. No </th>
                <th> Publisher Name </th>
                <th> Action </th>
            </tr>
        </thead>
        <tbody>
            <% @publishers.each do |publisher|  %>
            <tr>
                <td scope="row"><%=publisher.id %></td>
                <td><%=publisher.name %></td>
                <td>
                    <%= link_to "Show" , publisher_path(publisher.id), class: 'btn btn-primary ' %>
                    <%= link_to "Edit", edit_publisher_path(publisher.id), class: 'btn btn-primary' %>
                    <%= link_to "Delete", publisher_path(publisher.id), method: :delete, data: { confirm: 'Are you Sure?'} ,class: 'btn btn-primary' %>
                </td>
            </tr>
            <% end  %>   
        </tbody>
        </table>
    </div>

</div>